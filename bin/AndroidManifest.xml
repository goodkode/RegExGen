<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.takoli.regexgen"
    android:versionCode="1"
    android:versionName="1.01" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/regex_gui"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="net.takoli.regexgen.MainRegexGen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.takoli.regexgen.DisplayCheatSheetActivity"
            android:label="@string/title_activity_display_cheat_sheet"
            android:screenOrientation="portrait"
            android:parentActivityName="net.takoli.regexgen.MainRegexGen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.takoli.regexgen.MainActivity" />
        </activity>
    </application>

</manifest>
