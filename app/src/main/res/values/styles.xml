<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/appBlue</item>
        <item name="colorButtonNormal">@color/appBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <color name="appBlue">#0288D1</color>
    <color name="appLightBlue">#90CAF9</color>
    <color name="inputColor">#555555</color>
    <color name="light">#EEEEEE</color>


    <!--Cheat sheet-->

    <style name="TableStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/paddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/paddingTopBottom</item>
        <item name="android:paddingLeft">@dimen/paddingSides</item>
        <item name="android:paddingRight">@dimen/paddingSides</item>
    </style>

    <style name="CheatCategory" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/paddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/paddingSides</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/categoryFontSize</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#36b8e8</item>
    </style>

    <style name="CheatRule" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">@dimen/ruleWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ruleFontSize</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Description" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/descriptionFontSize</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#444</item>
    </style>

</resources>