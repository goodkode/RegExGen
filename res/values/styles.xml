<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CheckBoxText" >
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#222</item>
    </style>
    
    <style name="InputText" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textColorHint">#AAA</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>
    
    <style name="LinearColumn" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="LinearItem" >
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="CheatCategory" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#6633b5e5</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
    </style>
    
    <style name="CheatItem" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>
