<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffc500"
    tools:context=".MainActivity$DummySectionFragment" >

    <CheckBox
        android:id="@+id/anything"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:text="@string/anything"
        android:checked="true"
        android:onClick="onSWFCheckboxClicked" />
    
    <CheckBox
        android:id="@+id/upper_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/anything"
        android:layout_below="@id/anything"
        android:text="@string/upper_letter"
        android:onClick="onSWFCheckboxClicked" />
    
    <CheckBox
        android:id="@+id/lower_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/upper_letter"
        android:layout_below="@id/upper_letter"
        android:text="@string/lower_letter"
        android:onClick="onSWFCheckboxClicked" />

    <CheckBox
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lower_letter"
        android:layout_below="@+id/lower_letter"
        android:text="@string/number"
        android:onClick="onSWFCheckboxClicked" />

    <CheckBox
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/number"
        android:layout_below="@+id/number"
        android:text="@string/symbol"
        android:onClick="onSWFCheckboxClicked" />
    
    <CheckBox
        android:id="@+id/startsWithCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/symbol"
        android:layout_below="@+id/symbol"
        android:onClick="onSWFCheckboxClicked" />
    
    <EditText
        android:id="@+id/startsWithText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/startsWithCheckBox"
        android:layout_alignBaseline="@id/startsWithCheckBox"
        android:hint="@string/startsWithText"
        android:textSize="16sp"
        android:inputType="text" />

<!--     <Button
        android:id="@+id/startsWithButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/startsWithText"
        android:layout_alignBaseline="@id/startsWithText"
        android:onClick="onStartsWithButton"
        android:text="@string/startsWithButton"
        android:textSize="12sp"
        style="?android:attr/buttonStyleSmall" /> -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/startsWithCheckBox"
        android:layout_below="@id/anything"
        android:rotation="270"
        android:text="@string/title_section1"
        android:textSize="25sp"
        android:textStyle="italic" />

</RelativeLayout>
