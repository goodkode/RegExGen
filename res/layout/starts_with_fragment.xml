<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="#ffc500"
    tools:context=".MainActivity$DummySectionFragment" >
    
	<RelativeLayout
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="match_parent">
	    
	    <!-- TEXT on the side rotated -->
		<TextView
	        android:id="@+id/sideText1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:rotation="-90"
	        android:text="@string/title_section1"
	        android:textSize="25sp"
	        android:textStyle="italic"
	        android:textColor="#33b5e5" />
    
    </RelativeLayout>
    
	<RelativeLayout 
	    android:layout_weight="2"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
        android:layout_marginTop="20dp" >
	
	    <CheckBox
	        android:id="@+id/startsAnything"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/anything"
	        android:checked="true"
	        android:onClick="onSWFCheckboxClicked" />
	    
	    <CheckBox
	        android:id="@+id/upper_letter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@id/startsAnything"
	        android:layout_below="@id/startsAnything"
	        android:text="@string/upper_letter"
	        android:onClick="onSWFCheckboxClicked" />
	    
	    <CheckBox
	        android:id="@+id/lower_letter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@id/upper_letter"
	        android:layout_below="@id/upper_letter"
	        android:text="@string/lower_letter"
	        android:onClick="onSWFCheckboxClicked" />
	
	    <CheckBox
	        android:id="@+id/number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/lower_letter"
	        android:layout_below="@+id/lower_letter"
	        android:text="@string/number"
	        android:onClick="onSWFCheckboxClicked" />
	
	    <CheckBox
	        android:id="@+id/symbol"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/number"
	        android:layout_below="@+id/number"
	        android:text="@string/symbol"
	        android:onClick="onSWFCheckboxClicked" />
	    
	    <CheckBox
	        android:id="@+id/startsWithCheckBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/symbol"
	        android:layout_below="@+id/symbol"
	        android:onClick="onSWFCheckboxClicked" />
	    
		    <EditText
		        android:id="@+id/startsWithText"
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/startsWithCheckBox"
		        android:layout_alignBaseline="@id/startsWithCheckBox"
		        android:paddingBottom="5dp"
		        android:hint="@string/startsWithText"
		        android:textSize="16sp"
		        android:inputType="textNoSuggestions" />
		    
		<!-- swipe -->    
		<TextView
	        android:id="@+id/swipe1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:padding="10dp"
	        android:text="@string/swipe"
	        android:textSize="12sp"
	        android:textStyle="italic"
	        android:textColor="#33b5e5" />
	</RelativeLayout>
	
</LinearLayout>
