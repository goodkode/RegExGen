<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:context=".MainActivity" >

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#33b5e5"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="#fff" >
        </android.support.v4.view.PagerTitleStrip>
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:padding="20dp" >

	    <Button
	        android:id="@+id/generateButton"
	        android:layout_width="100dp"
	        android:layout_height="50dp"
	        android:layout_alignParentRight="true"
	        android:onClick="generateRegEx"
	        android:text="@string/generateButton" />
	    
	    <EditText
	        android:id="@+id/inputText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignBottom="@id/generateButton"
	        android:layout_toLeftOf="@id/generateButton"
	        android:hint="@string/inputText"
	        android:inputType="text" />
	    
	    <TextView
	        android:id="@+id/regexText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="20dp"
	        android:text="@string/regexText"
	        android:textSize="20sp" />
            
    </RelativeLayout>
</LinearLayout>
