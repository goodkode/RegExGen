<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="CheckBoxText" >
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#444</item>
    </style>
    
    <style name="InputText" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#444</item>
        <item name="android:textColorHint">#BBB</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>
    
    <style name="LinearColumn" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">18dp</item>
    </style>
    
    <style name="LinearItem" >
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="CheatCategory" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#6633b5e5</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>
    
    <style name="CheatItem" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>
